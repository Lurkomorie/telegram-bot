# Copy this to .env for local development with verbose logging

# Telegram Bot
BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_SECRET=generate_random_secret_here
PUBLIC_BASE_URL=https://your-ngrok-url.ngrok.io

# Database (Railway PostgreSQL - separate from main app)
DATABASE_URL=postgresql://postgres:your_password@your_host:port/railway

# Redis (using your existing Upstash Redis)
REDIS_URL=redis://default:your_redis_password@your_redis_host:6379

# AI Services
OPENROUTER_API_KEY=your_openrouter_api_key_here
RUNPOD_API_KEY_POD=your_runpod_api_key_here
RUNPOD_ENDPOINT=https://your_runpod_endpoint.proxy.runpod.net/run

# Security
IMAGE_CALLBACK_SECRET=your_callback_secret_here

# Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password
ADMIN_SECRET_KEY=generate_random_secret_key_here

# Environment
ENV=development
LOG_LEVEL=DEBUG

# ⚡ VERBOSE LOGGING ENABLED FOR LOCAL DEVELOPMENT ⚡
# This enables full LLM prompts, image prompts, and detailed execution logs
# Set to "production" or remove this line before deploying to Railway
ENVIRONMENT=development

# Feature Flags for Local Testing
# Set ENABLE_BOT=False to disable bot (prevents dual responses when server is also running)
# Set ENABLE_FOLLOWUPS=False to disable auto follow-up messages
# Set ENABLE_IMAGES_IN_FOLLOWUP=True to enable images during auto follow-ups (disabled by default)
# Set ENABLE_ENERGY_REGEN=False to disable automatic energy regeneration (2-hour cycle)
# Set FOLLOWUP_TEST_USERS to restrict followups to specific user IDs for testing (comma-separated, e.g., "123456,789012")
ENABLE_BOT=False
ENABLE_FOLLOWUPS=False
ENABLE_IMAGES_IN_FOLLOWUP=False
ENABLE_ENERGY_REGEN=False
# FOLLOWUP_TEST_USERS=


